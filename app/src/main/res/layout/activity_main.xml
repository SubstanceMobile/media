<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

        <android.support.design.internal.ScrimInsetsFrameLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/activity_main_fragment_placeholder"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:translationY="?actionBarSize"
                    android:layout_gravity="bottom"
                    android:id="@+id/activity_main_current_song_card"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                    <ImageView
                        android:id="@+id/activity_main_current_song_image"
                        android:adjustViewBounds="true"
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize" />

                    <TextView
                        android:id="@+id/activity_main_current_song_title"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="72dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

            </FrameLayout>



        </android.support.design.internal.ScrimInsetsFrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/activity_main_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_main_drawer_header"
        app:menu="@menu/menu_drawer" />

</android.support.v4.widget.DrawerLayout>